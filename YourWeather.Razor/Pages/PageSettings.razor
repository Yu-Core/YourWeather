@using YourWeather.Model.Enum

<div class="mt-5"></div>
<div class="text-h6 settings-tile">数据</div>
<MCard Class="settings-card">
    <MList>
        <MSubheader Class="d-sm-none">数据</MSubheader>
        <MListItem OnClick="()=>ShowDialogWeatherSource = true">
            <MListItemContent>
                更换天气源
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>
    </MList>

</MCard>
<div class="text-h6 settings-tile">显示</div>
<MCard Class="settings-card">
    <MList>
        <MSubheader Class="d-sm-none">显示</MSubheader>

        @if (!OperatingSystem.IsBrowser())
        {
            <MListItem OnClick="()=>ShowDialogTheme = true">
                <MListItemContent>
                    深色模式
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>
        }
        else
        {
            <MListItem>
                <MListItemContent>
                    深色模式
                </MListItemContent>
                <MListItemAction>
                    <MSwitch @bind-Value="SwitchTheme"></MSwitch>
                </MListItemAction>
            </MListItem>

        }

        <MDivider Class="mx-3 mx-sm-0"></MDivider>

        <MListItem OnClick="()=>ShowDialogLanguage = true">
            <MListItemContent>
                切换语言
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>

        <MDivider Class="mx-3 mx-sm-0"></MDivider>

        <MListItem OnClick="()=>ShowDialogIndexContentManager = true">
            <MListItemContent>
                首页内容管理
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>
    </MList>
</MCard>
<div class="text-h6 settings-tile">关于</div>
<MCard Class="settings-card">
    <MList>
        <MSubheader Class="d-sm-none">关于</MSubheader>
        <MListItem OnClick="()=>ShowDialogAppInformation = true">
            <MListItemContent>
                应用信息
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>

        <MDivider Class="mx-3 mx-sm-0"></MDivider>

        <MListItem OnClick="()=>ViewSourceCode()">
            <MListItemContent>
                查看源代码
            </MListItemContent>
            <MListItemAction>
                <div @onclick:stopPropagation="true">
                    <MButton OnClick="()=>ShowDialogSourceCode = true"
                             Style="text-transform:initial;"
                             Outlined>
                        <MIcon Color="@(IsDark()?"white":"black")">
                            @(SelectCodeSourceItem.Icon)
                        </MIcon>
                        @(SelectCodeSourceItem.Text)
                        <MIcon>@(ShowDialogSourceCode ? "mdi-chevron-up" : "mdi-chevron-down")</MIcon>
                        </MButton>
                    </div>

                </MListItemAction>

            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem OnClick="()=>ShowDialogThirdPartyCopyright = true">
                <MListItemContent>
                    第三方版权
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem>
                <MListItemContent>
                    日志
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

        </MList>
    </MCard>
@if (!OperatingSystem.IsBrowser())
{
    <MCard>
        <MListItem OnClick="()=>ShowDialogExit = true">
            <MListItemContent>
                退出
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-exit-to-app</MIcon>
            </MListItemAction>
        </MListItem>
    </MCard>
    <MDialog @bind-Value="ShowDialogExit" MaxWidth="420">
        <MCard>
            <MCardTitle Class="subtitle-1 justify-center">
                确认退出应用吗？
            </MCardTitle>
            <MCardActions>
                <MButton Class="flex-grow-1"
                     Text
                     OnClick="()=>ShowDialogExit = false">
                    取消
                </MButton>
                <MButton Class="flex-grow-1"
                     Text
                     Color="error"
                     OnClick="()=>ExitApp()">
                    确认
                </MButton>
            </MCardActions>
        </MCard>
    </MDialog>
}

<MDialog MaxWidth="420"
         @bind-Value="ShowDialogWeatherSource">
    <MCard>
        <MCardTitle>
            更换天气源
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowDialogWeatherSource = false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MDivider></MDivider>
        <MCardText>
            <MRadioGroup @bind-Value="SelectWeatherSourceItem"
                         Mandatory>
                @foreach (var item in WeatherSourceItems)
                {
                    <MRadio Label="@(item.Name)"
                        Value="@item"
                        Color="@(IsDark()?"white":"black")">
                    </MRadio>
                    <div class="ms-8 mb-2 body-2">@item.Description</div>
                }
            </MRadioGroup>
        </MCardText>
    </MCard>
</MDialog>

<MDialog MaxWidth="420"
         @bind-Value="ShowDialogTheme">
    <MCard>
        <MCardTitle>
            深色模式
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowDialogTheme = false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MDivider></MDivider>
        <MCardText>
            <MRadioGroup @bind-Value="ThemeState"
                         Mandatory>
                <MRadio Label="跟随系统"
                        Value="ThemeState.System"
                        Color="@(IsDark()?"white":"black")">
                </MRadio>
                <div class="mb-2"></div>
                <MRadio Label="浅色"
                        Value="ThemeState.Light"
                        Color="@(IsDark()?"white":"black")">
                </MRadio>
                <div class="mb-2"></div>
                <MRadio Label="深色"
                        Value="ThemeState.Dark"
                        Color="@(IsDark()?"white":"black")">
                </MRadio>
            </MRadioGroup>
        </MCardText>
    </MCard>
</MDialog>

<MDialog MaxWidth="420"
         @bind-Value="ShowDialogLanguage">
    <MCard>
        <MCardTitle>
            更改语言
            <MTooltip Bottom>
                <ActivatorContent>
                    <MIcon @attributes="@context.Attrs">mdi-information-outline</MIcon>
                </ActivatorContent>
                <ChildContent>
                    <span>暂不可用</span>
                </ChildContent>
            </MTooltip>
            
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowDialogLanguage= false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MDivider></MDivider>
        <MCardText>
            <MRadioGroup @bind-Value="SelectLanguageItem"
                         Disabled
                         Mandatory>
                @foreach (var item in LanguageItems)
                {
                    <div class="mb-2"></div>
                    <MRadio Label="@(item.Text)"
                        Value="@(item)"
                        Color="@(IsDark()?"white":"black")">
                    </MRadio>
                }

            </MRadioGroup>
        </MCardText>
    </MCard>
</MDialog>

<IndexContentManager @bind-Value="ShowDialogIndexContentManager"></IndexContentManager>

<MDialog MaxWidth="420"
         @bind-Value="ShowDialogAppInformation">
    <MCard>
        <MCardTitle>
            应用信息
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowDialogAppInformation= false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MDivider></MDivider>
        <MCardText>
            <MSimpleTable>
                <tbody>
                    <tr>
                        <td>应用</td>
                        <td>你的天气</td>
                    </tr>
                    <tr>
                        <td>作者</td>
                        <td>Yu-Core</td>
                    </tr>
                    <tr>
                        <td>版本</td>
                        <td>@AppVersion</td>
                    </tr>
                </tbody>
            </MSimpleTable>
        </MCardText>
    </MCard>
</MDialog>

<MDialog MaxWidth="420"
         @bind-Value="ShowDialogSourceCode">
    <MCard>
        <MCardTitle>
            更改来源
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowDialogSourceCode = false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MDivider></MDivider>
        <MCardText>
            <MRadioGroup @bind-Value="SelectCodeSourceItem"
                         Mandatory>
                @foreach (var item in CodeSourceItems)
                {
                    <div class="mb-2"></div>
                    <MRadio Value="@item"
                        Label="@(item.Text)"
                        Color="@(IsDark()?"white":"black")">
                    </MRadio>
                }
            </MRadioGroup>
        </MCardText>
    </MCard>
</MDialog>

<ThirdPartyCopyright @bind-Value="ShowDialogThirdPartyCopyright"></ThirdPartyCopyright>