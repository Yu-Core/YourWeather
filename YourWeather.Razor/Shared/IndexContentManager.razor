<MDialog Value="Value"
         ValueChanged="ValueChanged"
         Fullscreen
         Transition="dialog-right-transition">
    <MCard Class="@(IsDark() ?"":"grey lighten-4")">
        <MToolbar Class="@($"elevation-2 {(IsDark() ?"":"grey lighten-4")}")">
            <MButton Icon
                     OnClick="HandleOnCancel">
                <MIcon>mdi-arrow-left</MIcon>
            </MButton>
            <MToolbarTitle>首页内容管理</MToolbarTitle>
            <MSpacer></MSpacer>
        </MToolbar>
        <MContainer>
            <MCard Class="mt-10 rounded-lg">
                <MList>
                    <MListItem Class="ma-sm-1 px-5">
                        <MListItemContent>
                            实时天气
                        </MListItemContent>
                        <MListItemAction>
                            <MSwitch @bind-Value="ShowLives"
                                     Color="@(IsDark() ? "white":"black")">
                            </MSwitch>
                        </MListItemAction>
                    </MListItem>

                    <MDivider Class="mx-3 mx-sm-0"></MDivider>

                    <MListItem Class="ma-sm-1 px-5">
                        <MListItemContent>
                            逐小时预报
                        </MListItemContent>
                        <MListItemAction>
                            <MSwitch @bind-Value="ShowForeastHour"
                                     Color="@(IsDark() ? "white":"black")">
                            </MSwitch>
                        </MListItemAction>
                    </MListItem>

                    <MDivider Class="mx-3 mx-sm-0"></MDivider>

                    <MListItem Class="ma-sm-1 px-5">
                        <MListItemContent>
                            近日天气预报
                        </MListItemContent>
                        <MListItemAction>
                            <MSwitch @bind-Value="ShowForeastDays"
                                     Color="@(IsDark() ? "white":"black")">
                            </MSwitch>
                        </MListItemAction>
                    </MListItem>

                    <MDivider Class="mx-3 mx-sm-0"></MDivider>

                    <MListItem Class="ma-sm-1 px-5">
                        <MListItemContent>
                            其他实时信息
                        </MListItemContent>
                        <MListItemAction>
                            <MSwitch @bind-Value="ShowLivesInfo"
                                     Color="@(IsDark() ? "white":"black")">
                            </MSwitch>
                        </MListItemAction>
                    </MListItem>
                </MList>
            </MCard>
        </MContainer>
    </MCard>
</MDialog>
