<MDialog Value="Value"
         ValueChanged="ValueChanged"
         Fullscreen
         Transition="dialog-right-transition">
    <MCard>
        <MToolbar Class="elevation-1">
            <MButton Icon
                     OnClick="HandleOnCancel">
                <MIcon>mdi-arrow-left</MIcon>
            </MButton>
            <MToolbarTitle>首页内容管理</MToolbarTitle>
            <MSpacer></MSpacer>
        </MToolbar>
        <MList Class="py-5">
            <MListItem Class="ma-sm-1 px-5">
                <MListItemContent>
                    实时天气
                </MListItemContent>
                <MListItemAction>
                    <MSwitch Color="@(IsDark ? "":"grey")" @bind-Value="ShowLives"></MSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem Class="ma-sm-1 px-5">
                <MListItemContent>
                    逐小时预报
                </MListItemContent>
                <MListItemAction>
                    <MSwitch Color="@(IsDark ? "":"grey")" @bind-Value="ShowForeastHour"></MSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem Class="ma-sm-1 px-5">
                <MListItemContent>
                    近日天气预报
                </MListItemContent>
                <MListItemAction>
                    <MSwitch Color="@(IsDark ? "":"grey")" @bind-Value="ShowForeastDays"></MSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem Class="ma-sm-1 px-5">
                <MListItemContent>
                    其他实时信息
                </MListItemContent>
                <MListItemAction>
                    <MSwitch Color="@(IsDark ? "":"grey")" @bind-Value="ShowLivesInfo"></MSwitch>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</MDialog>
